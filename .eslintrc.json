{
  "root": true,
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "next",
    "plugin:react/recommended",
    "plugin:react-hooks/recommended",
    "plugin:@typescript-eslint/recommended",
    "prettier"
  ],
  "plugins": [
    "@typescript-eslint",
    "react",
    "react-hooks",
    "unused-imports",
    "@typescript-eslint"
  ],
  "rules": {
    "react/jsx-pascal-case": [
      "warn",
      {
        "allowAllCaps": true,
        "ignore": []
      }
    ],
    "react/prop-types": "warn",
    "react/react-in-jsx-scope": "off",
    "react/no-direct-mutation-state": "warn",
    "react/style-prop-object": "warn",
    "react/require-render-return": "error",
    "react/no-deprecated": "warn",
    "@typescript-eslint/no-explicit-any": "warn",
    "@typescript-eslint/no-var-requires": "off",
    "@typescript-eslint/no-unused-vars": "warn",
    "@typescript-eslint/ban-types": "warn",
    "@next/next/no-img-element": "warn",
    "@next/next/no-html-link-for-pages": "warn",
    "@next/next/no-head-import-in-document": "warn",
    "@next/next/no-document-import-in-page": "off",
    "@next/next/no-title-in-document-head": "off",
    "jsx-a11y/alt-text": "off",
    "react/jsx-fragments": "warn",
    "react/jsx-no-target-blank": "warn",
    "no-unused-vars": "off",
    "unused-imports/no-unused-imports": "warn",
    "no-const-assign": "error",
    "no-compare-neg-zero": "error",
    "no-cond-assign": "error",
    "no-useless-concat": "warn",
    "no-useless-return": "error",
    "prefer-rest-params": "warn",
    "prefer-const": "warn",
    "prefer-template": "error",
    "default-case": "error",
    "default-case-last": "error",
    "no-fallthrough": "error",
    "no-duplicate-case": "error",
    "no-duplicate-imports": ["error", { "includeExports": true }],
    "no-dupe-keys": "error",
    "no-dupe-else-if": "error",
    "no-dupe-args": "error",
    "no-self-assign": "warn",
    "no-self-compare": "warn",
    "no-sparse-arrays": "warn",
    "no-undef": "error",
    "no-unreachable": "error",
    "no-unsafe-finally": "error",
    "no-unreachable-loop": "error",
    "no-unsafe-negation": "warn",
    "no-unsafe-optional-chaining": "error",
    "no-template-curly-in-string": "error",
    "use-isnan": "error",
    "valid-typeof": ["error", { "requireStringLiterals": true }],
    "spaced-comment": ["warn", "always", { "exceptions": ["*"] }],
    "dot-notation": "error",
    "eqeqeq": "warn",
    "no-console": ["warn", { "allow": ["warn", "error"] }],
    "no-empty": "error",
    "no-extra-boolean-cast": "error",
    "no-unneeded-ternary": "error",
    "no-var": "error",
    "require-await": "error",
    /*  "react/jsx-sort-props": [ // TODO: Configure properly
      true,
      {
        "callbacksLast": true,
        "shorthandFirst": true,
        "shorthandLast": false,
        "multiline": "last",
        "ignoreCase": true,
        "noSortAlphabetically": true,
        "reservedFirst": ["key"],
        "locale": "auto"
      }
    ], */
    // Consistently import navigation APIs from `@/navigation` instead of next/link or next/navigation.
    "no-restricted-imports": [
      "error",
      {
        "name": "next/link",
        "message": "Please import from '@/lib/i18n/navigation' instead."
      },
      {
        "name": "next/navigation",
        "importNames": [
          "redirect",
          "permanentRedirect",
          "useRouter",
          "usePathname"
        ],
        "message": "Please import from '@/lib/i18n/navigation' instead."
      }
    ]
  }
}
